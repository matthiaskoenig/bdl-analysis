  Author                   = {Tarrats, N{\'{u}}ria and Moles, Anna and Morales, Albert and Garc{\'{\i}}a-Ruiz, Carmen and Fern{\'{a}}ndez-Checa, Jos{\'{e}} C. and Mar{\'{\i}}, Montserrat},
  Journal                  = {Hepatology},
