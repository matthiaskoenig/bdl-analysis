@Article{Zhang2012,
  Title                    = {Effect of bile duct ligation on bile acid composition in mouse serum and liver.},
  Author                   = {Zhang, Youcai and Hong, Ji-Young and Rockwell, Cheryl E. and Copple, Bryan L. and Jaeschke, Hartmut and Klaassen, Curtis D.},
  Journal                  = {Liver Int},
