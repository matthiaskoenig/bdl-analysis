  Institution              = {Department of Internal Medicine, Medical University of South Carolina, Charleston, South Carolina 29425, USA. rockey@musc.edu},
  Keywords                 = {Humans; Liver Cirrhosis, pathology/therapy; Translational Medical Research, methods/trends; Wound Healing, physiology},
