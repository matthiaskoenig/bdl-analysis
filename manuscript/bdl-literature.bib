@Article{Woolbright2013,
  Title                    = {Plasma biomarkers of liver injury and inflammation demonstrate a lack of apoptosis during obstructive cholestasis in mice.},
  Author                   = {Woolbright, Benjamin L. and Antoine, Daniel J. and Jenkins, Rosalind E. and Bajt, Mary Lynn and Park, B Kevin and Jaeschke, Hartmut},
